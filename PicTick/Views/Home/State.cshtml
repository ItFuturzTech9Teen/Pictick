<div class="content-wrapper" ng-controller="StateController">
    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> - State</h4>
            </div>
        </div>
    </div>
    <!-- /page header -->
