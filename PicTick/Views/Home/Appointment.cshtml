
@{
    ViewBag.Title = "Appointment";
}

<script src="~/Js/InstaAlbum/Services/HomeService.js"></script>
<script src="~/Js/InstaAlbum/Controllers/Appointment.js"></script>

<div class="content-wrapper" ng-controller="AppointmentController">
    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> - Appointment</h4>
            </div>
        </div>
    </div>
    <!-- /page header -->
    <!-- Content area -->
    <div class="content">
        <!-- Basic tabs -->
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">Appointment List</h5>
                    </div>
                    <div class="table-responsive">
                        <div class="col-md-5 float-right">
                            <input type="text" ng-model="Search" placeholder="Search..." class="form-control" />

                        </div>
                        <div class="col-md-2 float-right">
                            <input type="date" name="basic" ng-model="CurrentDate" class="form-control" ng-change="GetData()"
                                   required="required" placeholder="Date">

                        </div>
                        <table class="table">
                            <thead>
                                <tr class="border-solid bg-col-Grey">
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>AppointmentSlot</th>
                                    <th>Date</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="data in DataList | filter:Search">
                                    <td>{{$index+1}}</td>
                                    <td>{{data.Name}}</td>
                                    <td>{{data.Title}}</td>
                                    <td>{{data.Date | date:'dd-MM-yyyy'}}</td>
                                    <td>{{data.Description}}</td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
        <!-- /basic tabs -->
    </div>
    <!-- /content area -->
</div>


